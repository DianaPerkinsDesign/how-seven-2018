    <% link_to data.site.bingoAppStoreUrl, target: :_blank, rel: :noreferrer, :class => 'app-store-link' do %>
      <%= image_tag 'appstore.svg', :alt => 'App Store' %>
    <% end %>
  </div>
  <span><%= image_tag 'bingo-banner@2x.jpg', :alt => 'The Bingo Spot' %></span>
